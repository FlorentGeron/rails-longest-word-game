<div class = "container">
<h1>NEW GAME, BITCH!</h1>
<% @letters.each do |letter| %>
<span class= "letter_tile"><%=letter%></span>
<%end%>
<form action="/score" method="post">
  <h2>What is the longest word you can find?</h2>
  <input type="text" name="input">
  <input type="submit" value="Come on!">
  <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
  <%=hidden_field_tag :grid, @letters.join %>
  <%=hidden_field_tag :time, @start_time %>
</form>
<a href="./new"><div class=button_tile>RELOAD</div></a>
</div>
